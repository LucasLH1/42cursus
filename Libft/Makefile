OBJ = $(SRC:%.c=%.o)
CFLAGS = -g -Wall -Werror -Wextra
CC = clang
NAME = libft
SRC= $(wildcard *.c)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)
	ar -crs libft.a $(OBJ)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

so:
	$(CC) -fPIC $(CFLAGS) $(SRC)
	gcc -shared -o libft.so $(OBJ)

r:
	rm libft.a libft.o a.out libft.so

re: fclean all

.PHONY: all clean fclean re
